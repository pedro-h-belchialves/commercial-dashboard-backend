generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Seller {
  id         String @id @unique
  name       String @unique
  image      String
  password   String
  permission Int
  goal       Int
  commission Int
  Sale       Sale[]
}

model Sale {
  id           String   @id @unique
  seller       Seller   @relation(fields: [sellerId], references: [id])
  sellerId     String
  value        Int
  month        DateTime
  installments Int
}
